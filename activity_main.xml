<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#504d4d"
    tools:context="com.example.dell.calculatorassignment.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:id="@+id/textViewcalci"
        android:textSize="20dp"
        android:textColor="#0e0e0e" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextnum1"
        android:hint="Enter number"
        android:layout_below="@+id/textViewcalci"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/edittextdesign"
        android:shadowColor="#beb9ba"
        android:shadowDx="0"
        android:shadowDy="0"
        android:paddingLeft="20dp"
        android:textColor="#161616"
        android:shadowRadius="5"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextnum2"
        android:hint="Enter number"
        android:background="@drawable/edittextdesign"
        android:layout_below="@+id/editTextnum1"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:textColor="#161616"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer"
        android:id="@+id/buttonanswer"
        android:layout_below="@+id/editTextnum2"
        android:layout_toRightOf="@+id/textViewcalci"
        android:layout_toEndOf="@+id/textViewcalci"
        android:background="@drawable/button"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="-40dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonanswer"
        android:layout_marginTop="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Add"
                android:id="@+id/buttonaddition"
                android:layout_column="3"
                android:textColor="#1837bf"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="substract"
                android:id="@+id/buttonsubstract"
                android:layout_column="14"
                android:textColor="#1837bf"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="multiply"
                android:id="@+id/buttonmultiply"
                android:layout_column="3"
                android:textColor="#1837bf"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="divide"
                android:id="@+id/buttondivision"
                android:layout_column="14"
                android:textColor="#1837bf"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>

</RelativeLayout>
